                    <div class="functionCategory">
                        <h2>Calendar:</h2>
                    </div>
                    <div class="functions">
                        <div id="createEvent" class="jsonCode">
                            <h3>Create Event</h3>
                            <em>POST: /calendar</em>
                            <pre>
                                <code>
{
    "data": {
        "mode"         :    "groupcreate",
        "userId"       :    <em>USERID</em>,
        "title"        :    <em>USERID</em> (string),
        "description"  :    <em>MESSAGE</em> (string),
        "location"     :    <em>LOCATION</em> (string),
        "year"         :    <em>YEAR</em> (integer),
        "month"        :    <em>MONTH</em> (integer),
        "date"         :    <em>DAY</em> (integer),
        "hour"         :    <em>HOUR</em> (integer),
        "minutes"      :    <em>DURATION</em> (integer)
    }
}
                                </code>
                            </pre>
                        </div>
                        <div id="deleteEvent" class="jsonCode">
                            <h3>Delete Event</h3>
                            <em>POST: /calendar</em>
