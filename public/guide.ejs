                    <div class="functionCategory">
                        <h2>Kanban:</h2>
                    </div>
                    <div class="functions">
                        <div id="createCard" class="jsonCode">
                            <h3>Create Card</h3>
                            <em>POST: /kanban</em>
                            <pre>
                                <code>
{
    "mode"     :  "groupcreate",
    "userID"   :  <em>USERID</em>,
    "payload"  :  {
        "listName" :  <em><strong>EXACT </strong>LIST NAME</em>,  (string)
        "title"    :  <em>TITLE</em>             (string)
    }
}
                                </code>
                            </pre>
                        </div>
                        <div id="deleteCard" class="jsonCode">
                            <h3>Delete Card</h3>
                            <em>POST: /kanban</em>
                            <pre>
                                <code>
{
    "mode"     :  "groupdelete",
    "userID"   :  <em>USERID</em>,
    "payload"  :  {
        "cardName" :  <em><strong>EXACT </strong>CARD NAME</em>,  (string)
    }
}
                                </code>
                            </pre>
                        </div>
                        <div id="editCard" class="jsonCode">
                            <h3>Edit Card</h3>
                            <em>POST: /kanban</em>
                            <pre>
                                <code>
    {
        "mode":"groupedit",
        "userID":0,
        "payload": {
            "cardName":"Card Name",
            "listName":"List name",
            "editParams":{
<em>optional</em>        "title":"New Title / New Card Name",
<em>optional</em>        "desc":"New Description",
<em>optional</em>        "archive":"Archive card (TRUE / FALSE)",
<em>optional</em>        "listName":"New List Name to place card"    
            }                                               
        }                                                   
    }
                                </code>
                            </pre>
                        </div>
                    </div>
                </div>
